@model Order
@{
	Layout = "~/Views/Mailing/MasterMail.cshtml";
}

@section header
{
	Uw Bestelling
}

<table>
	<tr>
		<!-- margin width 40px -->
		<td width="40" style="font-family: 'Roboto Condensed', sans-serif;line-height: 0; font-size: 0;">&nbsp;</td>
		<!-- content -->
		<td width="650">
			<!-- content with articlelist -->
			<table cellpadding="0" cellspacing="0" border="0">
				<tr>					
					<!-- content above articlelist -->
					<td style="font-family: 'Roboto Condensed', sans-serif;font-size: 12px; line-height: 18px; letter-spacing: 0.6px; color: #000000;">
						<table cellpadding="0" cellspacing="0" border="0">
							<tr>								
								<!-- plain text -->
                                <td style="font-family: 'Roboto Condensed', sans-serif;font-size: 12px; line-height: 18px; letter-spacing: 0.6px; color: #000000;">
                                    <br />
                                    Dear @Model.GetCustomerName(),

                                    <br /><br />
                                    Thank you very much for your order.

                                    <br /><br />
                                </td>
							</tr>
						</table>
					</td>					
				</tr>			
			</table>
			@{Html.RenderPartial("~/Views/Mailing/_YourOrder.EN.cshtml", Model);}
		</td>
		<!-- margin width 40px -->
		<td width="40" style="font-family: 'Roboto Condensed', sans-serif;line-height: 0; font-size: 0;">&nbsp;</td>
	</tr>
</table>