@model Uvendia.Domain.Mvc.ViewModels.Mail.OrderMailModel
@{
    Layout = "~/Umbraco/Uvendia/Views/Mail/_MasterMail.cshtml";
    ViewBag.LogoUrl = Model.LogoUrl ?? string.Empty;
    var name = Model.Order.GetCustomerName();
    if (name.IsNullOrEmpty())
    {
        name = "Customer";
    }
}

@section header
{
	Your order
}

<table>
	<tr>
		<!-- margin width 40px -->
		<td width="40" style="font-family: 'Roboto Condensed', sans-serif;line-height: 0; font-size: 0;">&nbsp;</td>
		<!-- content -->
		<td width="650">
			<!-- content with articlelist -->
			<table cellpadding="0" cellspacing="0" border="0">
				<tr>					
					<!-- content above articlelist -->
					<td style="font-family: 'Roboto Condensed', sans-serif;font-size: 12px; line-height: 18px; letter-spacing: 0.6px; color: #000000;">
						<table cellpadding="0" cellspacing="0" border="0">
							<tr>

								<td style="font-family: 'Roboto Condensed', sans-serif;font-size: 12px; line-height: 18px; letter-spacing: 0.6px; color: #000000;">
									<p>
									    Dear @name,
                                    </p>
                                    <p>
                                        Thank you very much for your order.
                                    </p>
								</td>
							</tr>
						</table>
					</td>					
				</tr>			
			</table>
			@{Html.RenderPartial("~/Umbraco/Uvendia/Views/Mail/_OrderDetails.cshtml", Model);}
		</td>
		<!-- margin width 40px -->
		<td width="40" style="font-family: 'Roboto Condensed', sans-serif;line-height: 0; font-size: 0;">&nbsp;</td>
	</tr>
</table>