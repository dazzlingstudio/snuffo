@model Uvendia.Domain.Mvc.ViewModels.ITranslationModel
@{

}

@for (int i = 0; i < Model.Translations.Count(); i++)
{
    <div id="tabs-@(Model.Translations[i].CultureName)" class="tab-pane">
        @Html.HiddenFor(model => model.Translations[i].Id)
        @Html.HiddenFor(model => model.Translations[i].CultureName)
        @Html.HiddenFor(model => model.Translations[i].NativeName)
        @Html.HiddenFor(model => model.Translations[i].CreatedOn)
        @Html.HiddenFor(model => model.Translations[i].CreatedBy)

        <div class="row">
            @Html.LabelFor(model => model.Translations[i].DisplayName, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Translations[i].DisplayName, new { htmlAttributes = new { @class = "form-control input-sm required" } })
        </div>

        <br />
        <div class="row">
            @Html.LabelFor(model => model.Translations[i].ShortDescription, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Translations[i].ShortDescription, 6, 10, new { @class = "form-control editor" })
        </div>

        <br />
        <div class="row">
            @Html.LabelFor(model => model.Translations[i].LongDescription, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Translations[i].LongDescription, 6, 10, new { @class = "form-control editor" })
        </div>
    </div>
}
